# Yandex Cloud Skill - Environment Configuration
# Copy this file to .env and configure for your environment

# Event Bus Configuration
BUS_BACKEND=json           # json | sqlite | redis | graph
# BUS_BACKEND=sqlite
# BUS_BACKEND=redis
# BUS_BACKEND=graph

# JSON Backend (default)
# No additional configuration needed

# SQLite Backend
# SQLITE_PATH=./.claude/bus/shared-context.db

# Redis Backend
# REDIS_URL=redis://localhost:6379/0

# Neo4j Graph Backend
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=your_password_here

# Yandex Cloud Configuration
# YC_TOKEN=your_oauth_token_here
# YC_CLOUD_ID=your_cloud_id
# YC_FOLDER_ID=your_folder_id
# YC_ZONE=ru-central1-a

# Terraform Configuration
# TF_VAR_token=${YC_TOKEN}
# TF_VAR_cloud_id=${YC_CLOUD_ID}
# TF_VAR_folder_id=${YC_FOLDER_ID}

# Performance & Behavior
AGENTS_MAX=4              # Maximum parallel agents
SKIP_HOOKS=0              # Set to 1 to skip git hooks
SKIP_AGENTS=0             # Set to 1 to skip launching agents
FAST=0                    # Set to 1 for fast mode (skip non-essential checks)
ALLOW_DEPLOY=0            # Set to 1 to allow deployment operations

# Security
# Do not commit real secrets to version control!
# Use environment variables or secret managers
# NEO4J_PASSWORD=        # Example of secret that should not be committed
